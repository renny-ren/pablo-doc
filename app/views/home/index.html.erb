<script src="https://code.jquery.com/jquery-1.12.4.js"></script>   
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script> 

<div class="doc-container">
  <div class="reload-gallery"><%= render 'gallery' %></div>

  <div class="canvas-center">
    <div class="result">
      <div id="toolbar" onselectstart="return false">
        <div class="change-font change-font-bar">
          <div class="font-name">Change Font</div>
          <div class="change-font-arrow"></div>
        </div>
        <div id="change-size" title="Change font-size"><%= fa_icon("font") %></div>
        <div id="change-weight" title="Bold text"><%= fa_icon("bold") %></i></div>
        <div id="change-italic" title="Italic"><%= fa_icon("italic") %></div>
        <div id="change-color" title="Change font-color"></div>
        <div id="delete" onclick="delete_element();" title="Delete"><%= fa_icon("times") %></div>
        <div class="color-menu">
          <div class="color-white"></div>
          <div class="color-black"></div>
          <div class="color-blue"></div>  
          <div class="color-green"></div>  
          <div class="color-gray"></div>  
          <div class="color-purple"></div>  
          <div class="color-red"></div>  
          <div class="color-yellow"></div>  
          <div class="color-aqua"></div>  
          <div class="color-darkorange"></div>  
        </div>

        <div class="font-menu">
          <div class="change-font font-Vibur">Vibur</div>
          <div class="change-font font-Satisfy">Satisfy</div>
          <div class="change-font font-PermanentMarker">Permanent Marker</div>
          <div class="change-font font-Pacifico">Pacifico</div>
          <div class="change-font font-Oswald">Oswald</div>
          <div class="change-font font-Mogra">Mogra</div>
          <div class="change-font font-MarckScript">Marck Script</div>
          <div class="change-font font-Lobster">Lobster</div>
          <div class="change-font font-Lato">Lato</div>
          <div class="change-font font-DancingScript">Dancing Script</div>
        </div>

        <div class="size-menu">
          <div class="size-option size-12">12px</div>
          <div class="size-option size-16">16px</div>
          <div class="size-option size-20">20px</div>
          <div class="size-option size-24">24px</div>
          <div class="size-option size-28">28px</div>
          <div class="size-option size-32">32px</div>
          <div class="size-option size-36">36px</div>
        </div>

      </div>
      <div id="header" class="editable">
        <% @header.each do |header| %>
          <div class="draggable" id="header-item" onclick="select_element(this);"><%== header %></div>
        <% end %>
      </div>

      <div id="quotation" class="editable">
        <% @quotation.each do |quotation| %>
          <div class="draggable" id="quotation-item"><%== quotation %></div>
        <% end %>
      </div>

      <div id="bullet" class="editable">
        <% @bullet.each do |bullet| %>
          <div class="draggable" id="bullet-item"><%== bullet %><br /></div>
        <% end %>
      </div>

      <div id="bold" class="editable">
        <% @bold.each do |bold| %>
          <p class="draggable" id="bold-item"><%== bold %></p>
        <% end %>
      </div>
    </div>

    <div id="background-images"></div>   
  </div>

  <div class="image-options">
    <%= render 'size' %>
    <%= render 'filter' %>
    <%= render 'text' %>
  </div>
</div>