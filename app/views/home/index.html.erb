<div class="type-box">
  <%= form_tag(action: 'create') do %>
    Please type in your text: <br/>
    <%= text_area_tag :doc, nil, size: "50x50" %> <br/>
    <%= submit_tag "Submit", style: "margin-left: 100px; font-size: 20px; height: 50px; width:100px; background-color: deepskyblue;" %>
  <% end %>
</div>

<div class="result">
  header: <%= @header %> <br/>
  quotation: <%= @quotation %> <br/>
  bullet: <br/>
  <% @bullet.each do |bullet| %>
    <%= bullet %><br/>
  <% end %>
</div>