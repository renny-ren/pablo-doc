localStorage.setItem('selected_src_0', $($('.gallery-item-selected').get(0)).children().attr('src'));
localStorage.setItem('selected_src_1', $($('.gallery-item-selected').get(1)).children().attr('src'));
localStorage.setItem('selected_src_2', $($('.gallery-item-selected').get(2)).children().attr('src'));
$(".reload-gallery").html("<%= j(render 'gallery') %>");
$(".reload-logo").html("<%= j(render 'logo') %>");

if ($('.option-item-logo').hasClass('option-item-selected')){
  $('.option-item-logo').removeClass('option-item-selected');
  $('.canvas-center').removeClass('canvas-center-leftbar');
}

for (var i = 2; i >= 0; i--){
  if (localStorage.getItem('selected_src_' + i) != 'undefined') {
    temp_item = $('.gallery-item').last().clone();
    temp_item.children().attr('src', localStorage.getItem('selected_src_' + i));
    $('.image-yellow').after(temp_item);
    $(temp_item).addClass('gallery-item-selected');
  }  
}
