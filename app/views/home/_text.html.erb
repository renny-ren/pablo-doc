<div class="image-extra-options">
  <div class="image-extra-options-header">Text</div>
  <div class="text-toggles" onselectstart="return false">
    <span class="text-toggle text-toggle-selected">Header</span>
    <span class="text-toggle text-toggle-selected">Quotation</span>
    <span class="text-toggle text-toggle-selected">Bullet</span>
    <span class="text-toggle text-toggle-selected">Bold</span>
  </div>

  <div class="share-button"><%= social_share_button_tag("test") %></div>

  <div class="download-button">
    <%= button_to "Download", get_download_path %>
  </div> 
  <!-- <div id="trash"></div> -->
  <div class="type-box">
    <%= form_tag({action: 'create'}, multipart: true) do %>
      <div class="type-box-header">Put your awesome text or generate from URL</div>
      <div class="type-box-content">
        <%= kindeditor_tag :doc, @content, langType: 'en' %>
        <%= submit_tag "Generate Content", class: "btn btn-info", data: { disable_with: "Generating..." }, style: "margin-top: 8px;" %>
        <%= text_field_tag :url, nil, placeholder: "Put URL here...", size: 73 %> <br />
        <%= submit_tag "Submit URL", class: "btn btn-info", data: { disable_with: "Loading..." }, style: "margin-top: 5px;" %> 
        <!-- <%= file_field_tag :uploaded_file, onchange:"form.submit();" %> -->
      </div>
    <% end %>

  </div>
</div>